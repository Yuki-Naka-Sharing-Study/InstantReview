<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/want_memo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WantMemoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar_want_memo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            >

            <ImageButton
                android:id="@+id/btn_close_want_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/text_view_title_want_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食べたいメシのメモ作成"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/text_view_save_want_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                />

        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:id="@+id/text_view_want_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タイトル"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar_want_memo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/edit_text_want_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="例（カップヌードル）"
            app:layout_constraintTop_toBottomOf="@+id/text_view_want_memo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <ImageView
            android:id="@+id/image_view_want_memo"
            android:layout_width="144dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_want_memo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/text_view_comment_want_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="コメント"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_want_memo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="264dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/edit_text_comment_want_memo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/image_view_want_memo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>