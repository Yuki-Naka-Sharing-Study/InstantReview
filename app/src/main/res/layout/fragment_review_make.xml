<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/review_make"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReviewMakeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_review_make"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            tools:ignore="MissingConstraints"
            >

            <ImageButton
                android:id="@+id/btn_close_review_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                />

            <TextView
                android:id="@+id/text_view_title_review_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レビュー作成"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/text_view_save_review_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="18sp"
                android:layout_gravity="end"
                />

        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:id="@+id/text_view_name_of_instant_review_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="インスタント食品の名称"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_review_make"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/edit_text_name_of_instant_review_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="例（カップヌードル）"
            app:layout_constraintTop_toBottomOf="@+id/text_view_name_of_instant_review_make"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <ImageView
            android:id="@+id/image_view_want_memo"
            android:layout_width="144dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_name_of_instant_review_make"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>