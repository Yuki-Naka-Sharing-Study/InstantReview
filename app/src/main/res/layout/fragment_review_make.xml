<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/review_make"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReviewMakeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_review_make"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            tools:ignore="MissingConstraints"
            >

            <ImageButton
                android:id="@+id/btn_close_review_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                />

            <TextView
                android:id="@+id/text_view_title_review_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レビュー作成"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/save_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="18sp"
                android:layout_gravity="end"
                />

        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:id="@+id/name_of_instant"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:text="インスタント食品の名称"
            app:layout_constraintTop_toBottomOf="@id/toolbar_review_make"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="This is review make fragment"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="190dp"
            />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name_of_instant"
            app:layout_constraintLeft_toLeftOf="parent"
            android:inputType="text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>